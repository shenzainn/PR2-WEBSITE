<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/png" href="/images/EduVault.png">
    <title>Track Requests</title>
    <link rel="stylesheet" href="../CSS/styles.css">
</head>

<body>
    <button id="menu-toggle">â˜°</button>
    <section id="sidebar">
        <div class="logo">
            <img src="/images/UE_RED_SEAL.png" alt="University of the East Logo">
            <h1>EduVault</h1>
            <h2>Structured Document Management System</h2>
        </div>

        <div class="items">
            <li><a href="/students">Home</a></li>
            <li><a href="/students/track" class="active">Track</a></li>
            <li><a href="/students/settings">Settings</a></li>
            <li><a href="/students/notif">Notifications</a></li>
            <li><a href="/students/help">Help</a></li>
        </div>
    </section>

    <section id="main-content">
        <h2>Track Your Requests</h2>

        <div class="request-status">
            <table id="pending-requests">
                <thead>
                    <tr>
                        <th>Request ID</th>
                        <th>Document Type</th>
                        <th>Date Submitted</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% requests.filter(r => r.status === "new" || r.status === "pending").forEach(req => { %>
                        <tr>
                            <td><%= req._id %></td>
                            <td><%= req.documentType %></td>
                            <td><%= new Date(req.createdAt).toLocaleDateString() %></td>
                            <td><%= req.status.charAt(0).toUpperCase() + req.status.slice(1) %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            

            <table id="approved-requests">
                <thead>
                    <tr>
                        <th>Request ID</th>
                        <th>Document Type</th>
                        <th>Date Approved</th>
                        <th>Download</th>
                    </tr>
                </thead>
                <tbody>
                    <% requests.filter(r => r.status === "approved").forEach(req => { %>
                        <tr>
                            <td><%= req._id %></td>
                            <td><%= req.documentType %></td>
                            <td><%= new Date(req.updatedAt).toLocaleDateString() %></td>
                            <td><a href="<%= req.fileUrl || '#' %>" target="_blank">Download</a></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            
            <table id="rejected-requests">
                <thead>
                    <tr>
                        <th>Request ID</th>
                        <th>Document Type</th>
                        <th>Date Rejected</th>
                        <th>Reason</th>
                    </tr>
                </thead>
                <tbody>
                    <% requests.filter(r => r.status === "rejected").forEach(req => { %>
                        <tr>
                            <td><%= req._id %></td>
                            <td><%= req.documentType %></td>
                            <td><%= new Date(req.updatedAt).toLocaleDateString() %></td>
                            <td><%= req.rejectionReason || 'No reason provided' %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>        
        </div>
    </section>

    <script src="/js/script.js"></script>
</body>
</html>
