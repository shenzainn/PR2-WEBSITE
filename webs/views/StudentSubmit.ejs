<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Upload</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <button id="menu-toggle">â˜°</button>
    <section id="sidebar">
        <div class="logo">
            <img src="/images/UE_RED_SEAL.png" alt="University of the East Logo">
            <h1>EduVault</h1>
            <h2>Structured Document Management System</h2>
        </div>
        
        <div class="items">
            <li><a href="http://<%= localIP%>:<%= portNum%>/students">Home</a></li>
            <li><a href="http://<%= localIP%>:<%= portNum%>/students/track">Track</a></li>
            <li><a href="http://<%= localIP%>:<%= portNum%>/students/message">Messages</a></li>
            <li><a href="http://<%= localIP%>:<%= portNum%>/students/settings">Settings</a></li>
            <li><a href="http://<%= localIP%>:<%= portNum%>/students/help">Help</a></li>
        </div>
    </section>

    <section id="main-content">
        <h2>Upload Document</h2>
        <div class="upload-container">
            <label for="formType">Select Document Type:</label>
            <select id="formType">
                <option value="137">Form 137</option>
                <option value="138">Form 138</option>
            </select>

            <input type="file" id="fileInput" name="file" accept=".pdf,.docx,.jpg">
            <button onclick="uploadFile()">Upload</button>
        </div>
    </section>

    <script>
            // Upload file function
            async function uploadFile() {
                const fileInput = document.getElementById("fileInput");
                const formType = document.getElementById("formType").value;
                const file = fileInput.files[0];

                if (!file) {
                    alert("Please select a file!");
                    return;
                }

                const formData = new FormData();
                formData.append("file", file);
                formData.append("formType", formType); // Send form type

                try {
                    const response = await fetch("http://localhost:3000/upload/forms", {  
                        method: "POST",
                        body: formData
                    });

                    const result = await response.json();
                    alert(result.message);
                    console.log(result);
                } catch (error) {
                    console.error("Error uploading file:", error);
                }
            }
    </script>  
    <script src="/js/script.js"></script>
</body>
</html>
